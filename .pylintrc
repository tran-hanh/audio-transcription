[MASTER]
# Suppress import errors for packages that may not be installed in linting env
# but are required at runtime
ignore-imports=yes

[MESSAGES CONTROL]
# Disable acceptable warnings for this codebase
disable=
    import-error,           # Expected - packages installed at runtime
    broad-exception-caught, # Acceptable for web APIs and external service calls
    too-many-return-statements,  # Acceptable for validation-heavy functions
    too-many-locals,        # Acceptable for complex orchestration functions
    too-many-branches,      # Acceptable for multi-step processes
    too-many-statements     # Acceptable for complex business logic

[FORMAT]
# Line length
max-line-length=100

[DESIGN]
# Allow more complexity for service/API code
max-returns=10
max-locals=25
max-branches=20
max-statements=70


